@model IEnumerable<LogisticsWebApp.Models.UserWithRolesViewModel>

@{
    ViewData["Title"] = "Manage Users and Roles";
}

<div class="container mt-4">
    <h1 class="display-4 text-center mb-5 fw-bold text-dark">
        <i class="bi bi-people-fill me-3"></i>Manage Users and Roles
    </h1>

    <div class="d-flex justify-content-center mb-4">
        <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg shadow-sm rounded-pill px-4 py-2">
            <i class="bi bi-person-plus-fill me-2"></i>Register New User
        </a>
    </div>

    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <div class="card-header bg-primary text-white py-3">
            <h4 class="card-title mb-0 fw-bold">User List</h4>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-light">
                        <tr>
                            <th scope="col" class="py-3 px-4 text-uppercase text-muted">User Name</th>
                            <th scope="col" class="py-3 px-4 text-uppercase text-muted">Email</th>
                            <th scope="col" class="py-3 px-4 text-uppercase text-muted">Phone Number</th>
                            <th scope="col" class="py-3 px-4 text-uppercase text-muted">Roles</th>
                            <th scope="col" class="py-3 px-4 text-uppercase text-muted text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle">
                                <td class="py-3 px-4 text-break">
                                    <strong class="text-dark">@Html.DisplayFor(modelItem => item.UserName)</strong>
                                </td>
                                <td class="py-3 px-4 text-break">
                                    <span class="text-muted">@Html.DisplayFor(modelItem => item.Email)</span>
                                </td>
                                <td class="py-3 px-4 text-break">
                                    <span class="text-muted">@Html.DisplayFor(modelItem => item.PhoneNumber)</span>
                                </td>
                                <td class="py-3 px-4 text-break">
                                    @if (item.Roles != null && item.Roles.Any())
                                    {
                                        <span class="badge bg-info text-dark rounded-pill px-3 py-2">
                                            @string.Join(", ", item.Roles)
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary rounded-pill px-3 py-2">No Roles</span>
                                    }
                                </td>
                                <td class="py-3 px-4 text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm rounded-pill me-2">
                                            <i class="bi bi-pencil-fill"></i> Edit Roles
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info btn-sm rounded-pill me-2">
                                            <i class="bi bi-info-circle-fill"></i> Details
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm rounded-pill">
                                            <i class="bi bi-trash-fill"></i> Delete User
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
}

