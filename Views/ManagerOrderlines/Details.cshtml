@model LogisticsWebApp.Models.Orderline

@{
    ViewData["Title"] = "Order Details"; // More descriptive title
}

<div class="container mt-4">
    @* Added container for better spacing and responsiveness *@
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @* Centered content and made it wider *@
            <div class="card shadow p-4 mb-4">
                @* Added card styling for visual grouping and shadow *@
                <div class="card-header bg-secondary text-white text-center">
                    @* Styled card header, using secondary color *
                    <h2 class="mb-0">Details for Orderline #@Model.OrderlineID</h2> @* Prominent heading with Orderline ID *@
                </div>
                <div class="card-body">
                    <dl class="row dl-horizontal">
                        @* dl-horizontal for Bootstrap 3/4 like effect, or use Bootstrap 5's d-grid *
                        <dt class = "col-sm-4 text-primary"> @* Made labels bold and primary color *@
                        <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.Customer)
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Customer.UserName) 
                        </dd>

                        <dt class = "col-sm-4 text-primary">
                            <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.InitialAddress)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.InitialAddress)
                        </dd>

                        <dt class = "col-sm-4 text-primary">
                            <i class="fas fa-map-marked-alt"></i> @Html.DisplayNameFor(model => model.DestinationAddress)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.DestinationAddress)
                        </dd>

                        <dt class = "col-sm-4 text-primary">
                            <i class="fas fa-calendar-alt"></i> @Html.DisplayNameFor(model => model.Date)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.Date)
                        </dd>

                        <dt class = "col-sm-4 text-primary">
                            <i class="fas fa-balance-scale"></i> @Html.DisplayNameFor(model => model.WeightKg)
                        </dt>
                        <dd class = "col-sm-8">
                            @Html.DisplayFor(model => model.WeightKg)
                        </dd>

                        <dt class = "col-sm-4 text-primary">
                            <i class="fas fa-info-circle"></i> @Html.DisplayNameFor(model => model.Status)
                        </dt>
                        <dd class = "col-sm-8">
                            <span class="badge @(Model.Status == "Completed" ? "bg-success" : Model.Status == "In Progress" ? "bg-info" : "bg-warning text-dark")">
                                @Html.DisplayFor(model => model.Status)
                            </span>
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4"> @* Centered action buttons with top margin *@
                            <a asp-action="Edit" asp-route-id="@Model?.OrderlineID" class="btn btn-warning btn-lg">
                                @* Styled Edit button *@
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-3">
                                @* Styled Back to List button *@
                                <i class="fas fa-arrow-alt-circle-left"></i> Back to List
                            </a>
                </div>
            </div>
