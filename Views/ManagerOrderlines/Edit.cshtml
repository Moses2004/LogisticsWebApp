@model LogisticsWebApp.Models.Orderline

@{
    ViewData["Title"] = "Edit Orderline"; // More descriptive title
}

<div class="container mt-4">
    @* Added container for better spacing *@
    <div class="row">
        <div class="col-md-8 offset-md-2">
            @* Centered the form column and made it wider *@
            <div class="card shadow p-4 mb-4">
                @* Added a card styling with shadow and padding *@
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="mb-0">Edit Orderline <small>(ID: @Model.OrderlineID)</small></h2> @* Styled card header, show ID *@
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="OrderlineID" /> @* Hidden input for the ID *@

                        <div class="form-group mb-3">
                            @* Added mb-3 for spacing *@
                            <label asp-for="CustomerID" class="form-label">Customer Name</label> @* Changed control-label to form-label, clarified label *@
                            <select asp-for="CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                            <span asp-validation-for="CustomerID" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="InitialAddress" class="form-label"></label>
                            <input asp-for="InitialAddress" class="form-control" />
                            <span asp-validation-for="InitialAddress" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="DestinationAddress" class="form-label"></label>
                            <input asp-for="DestinationAddress" class="form-control" />
                            <span asp-validation-for="DestinationAddress" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Date" class="form-label"></label>
                            <input asp-for="Date" class="form-control" type="date" /> @* Added type="date" for native date picker *@
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="WeightKg" class="form-label"></label>
                            <input asp-for="WeightKg" class="form-control" type="number" step="0.1" /> @* Added type="number" and step *@
                            <span asp-validation-for="WeightKg" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-4">
                            @* Added mb-4 for more spacing before button *@
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-control">
                                <option value="Pending">Pending</option>
                                <option value="In Progress">In Progress</option>
                                <option value="Completed">Completed</option>
                                <option value="Cancelled">Cancelled</option>
                            </select>
                            <span asp-validation-for="Status" class="text-danger"></span>
                        </div>

                        <div class="form-group d-grid gap-2">
                            @* Used d-grid gap-2 for a full-width button *@
                            <input type="submit" value="Save Changes" class="btn btn-success btn-lg" /> @* Changed button text and color *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-3 text-center">
        @* Centered and added top margin for back to list *@
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-alt-circle-left"></i> Back to Order List
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }