@model IEnumerable<LogisticsWebApp.Models.Invoice>

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@{
    ViewData["Title"] = "Invoices Overview";
    var currentUserIsManager = User.IsInRole("Manager");
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Invoice List</h1>

    @if (currentUserIsManager)
    {
        <p>
            <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus-circle"></i> Create New Invoice</a>
        </p>
    }

    <div class="table-responsive">
        <table class="table table-hover table-bordered shadow-sm">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Orderline</th>
                    <th>Transport Unit</th>
                
                    <th>Invoice ID</th> 
                    <th>
                        @Html.DisplayNameFor(model => model.TotalAmount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentStatus)
                    </th>
                    <th>Date</th>
                    @if (currentUserIsManager)
                    {
                        <th>
                            @Html.DisplayNameFor(model => model.Customer)
                        </th>
                    }
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Orderline.InitialAddress)
                            <br />
                            <small class="text-muted">Order ID: @Html.DisplayFor(modelItem => item.OrderlineID)</small>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransportUnit.TransportUnitID)
                            <br />
                            <small class="text-muted">Unit ID: @Html.DisplayFor(modelItem => item.TransportUnitID)</small>
                        </td>
                       
                        <td>
                            @Html.DisplayFor(modelItem => item.InvoiceID) 
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TotalAmount)
                        </td>
                        <td>
                            @{
                                var statusClass = "";
                                switch (item.PaymentStatus)
                                {
                                    case "Paid":
                                        statusClass = "badge bg-success";
                                        break;
                                    case "Pending":
                                        statusClass = "badge bg-warning text-dark";
                                        break;
                                    case "Overdue":
                                        statusClass = "badge bg-danger";
                                        break;
                                    case "Partially Paid":
                                        statusClass = "badge bg-info";
                                        break;
                                    default:
                                        statusClass = "badge bg-secondary";
                                        break;
                                }
                            }
                            <span class="@statusClass">@Html.DisplayFor(modelItem => item.PaymentStatus)</span>
                        </td>
                        <td>
                            @if (item.Orderline != null)
                            {
                                @Html.DisplayFor(modelItem => item.Orderline.Date)
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </td>
                        @if (currentUserIsManager)
                        {
                            <td>
                                @Html.DisplayFor(modelItem => item.Customer.Email)
                            </td>
                        }
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="Invoice Actions">
                                <a asp-action="Details" asp-route-id="@item.InvoiceID" class="btn btn-sm btn-secondary mx-1" title="Details"><i class="fas fa-info-circle"></i></a>

                                @if (currentUserIsManager)
                                {
                                    <a asp-action="Edit" asp-route-id="@item.InvoiceID" class="btn btn-sm btn-info" title="Edit"><i class="fas fa-edit"></i></a>
                                    <a asp-action="Delete" asp-route-id="@item.InvoiceID" class="btn btn-sm btn-danger" title="Delete"><i class="fas fa-trash-alt"></i></a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
}