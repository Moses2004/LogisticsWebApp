@model LogisticsWebApp.Models.Invoice

@{
    ViewData["Title"] = "Edit Invoice"; // More descriptive title
}

<div class="container mt-4">
    <h1 class="mb-4 text-primary">Edit Invoice</h1>

    <hr class="mb-4" />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Invoice Details</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        @* This hidden input is crucial for passing the ID back to the controller during an edit *@
                        <input type="hidden" asp-for="InvoiceID" />

                        <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-3">
                            <label asp-for="OrderlineID" class="form-label"></label>
                            <select asp-for="OrderlineID" class="form-control" asp-items="ViewBag.OrderlineID">
                                <option value="">-- Select Orderline --</option> @* Add a default option for dropdown *@
                            </select>
                            <span asp-validation-for="OrderlineID" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="TransportUnitID" class="form-label"></label>
                            <select asp-for="TransportUnitID" class="form-control" asp-items="ViewBag.TransportUnitID">
                                <option value="">-- Select Transport Unit --</option> @* Add a default option for dropdown *@
                            </select>
                            <span asp-validation-for="TransportUnitID" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-3">
                            <label asp-for="TotalAmount" class="form-label"></label>
                            <input asp-for="TotalAmount" class="form-control" />
                            <span asp-validation-for="TotalAmount" class="text-danger"></span>
                        </div>
                        <div class="mb-4">
                            <label asp-for="PaymentStatus" class="form-label fs-5">Payment Status</label>
                            <select asp-for="PaymentStatus" class="form-select form-select-lg" aria-describedby="paymentStatusHelp" required>
                                <option value="">-- Select Status --</option>
                                <option value="Pending">🔴 Pending</option>
                                <option value="Partially Paid">🟡 Partially Paid</option>
                                <option value="Paid">🟢 Paid</option>
                                <option value="Overdue">🟠 Overdue</option>
                                <option value="Cancelled">⚪ Cancelled</option>
                            </select>
                            <div id="paymentStatusHelp" class="form-text">Select the current payment status of this invoice.</div>
                            <span asp-validation-for="PaymentStatus" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" value="Save" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> Save Changes @* Icon and larger button *@
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-alt-circle-left"></i> Back to List
        </a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }