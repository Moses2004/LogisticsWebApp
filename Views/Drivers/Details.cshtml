@model LogisticsWebApp.Models.Driver

@{
    ViewData["Title"] = "Driver Details";
}

<style>
    /* General Body and Font - Keep consistent with other pages */
    body {
        font-family: 'Montserrat', sans-serif;
        background: linear-gradient(to right, #ece9e6, #ffffff);
        color: #34495e;
        margin: 0;
        line-height: 1.6;
    }

    /* Content Container - Consistent with other pages */
    .content-container {
        max-width: 800px; /* Adjust width for details view */
        margin: 40px auto;
        padding: 30px;
        background-color: #ffffff;
        border-radius: 12px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        border: 1px solid #e0e0e0;
    }

    /* Heading (H1) Styling - Consistent with other pages */
    h1 {
        text-align: center;
        color: #2c3e50;
        margin-bottom: 35px;
        font-size: 2.5em;
        font-weight: 700;
        position: relative;
        padding-bottom: 10px;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.05);
    }

        h1::after {
            content: '';
            position: absolute;
            left: 50%;
            bottom: 0;
            transform: translateX(-50%);
            width: 80px;
            height: 3px;
            background-color: #3498db;
            border-radius: 5px;
        }

    /* Details List Styling */
    .details-list {
        margin-top: 30px;
        background-color: #f9fbfb;
        padding: 25px;
        border-radius: 8px;
        border: 1px solid #e9ecef;
        box-shadow: inset 0 1px 3px rgba(0, 0, 0, 0.05);
    }

        .details-list dt {
            font-weight: 600;
            color: #34495e;
            padding: 10px 0;
            border-bottom: 1px dashed #e0e0e0;
        }

        .details-list dd {
            padding: 10px 0 10px 15px; /* Add left padding for separation */
            margin-bottom: 0; /* Remove default margin */
            color: #555;
        }

            .details-list dt:last-of-type,
            .details-list dd:last-of-type {
                border-bottom: none; /* No border for the last item */
            }

    /* Action Buttons Container */
    .details-actions {
        margin-top: 40px;
        text-align: center;
    }

    /* Action Button Styling - Consistent with other action buttons */
    .action-button {
        display: inline-block;
        padding: 12px 25px;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1.05em;
        transition: background-color 0.3s ease, transform 0.2s ease, border-color 0.3s ease;
        margin: 0 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .edit-button {
        background-color: #007bff; /* Blue */
        color: white;
        border: 1px solid #007bff;
    }

        .edit-button:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }

    .back-to-list-button {
        background-color: #6c757d; /* Grey */
        color: white;
        border: 1px solid #6c757d;
    }

        .back-to-list-button:hover {
            background-color: #545b62;
            transform: translateY(-2px);
        }

</style>

<div class="content-container">
    <h1>Driver Details</h1>

    <div class="details-list">
        <dl class="row">
            <dt class="col-sm-3">
                @* Adjusted column widths for better alignment *@
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-3">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Age)
            </dd>
        </dl>
    </div>

    <div class="details-actions">
        <a asp-action="Edit" asp-route-id="@Model?.DriverID" class="action-button edit-button">Edit</a>
        <a asp-action="Index" class="action-button back-to-list-button">Back to List</a>
    </div>
</div>