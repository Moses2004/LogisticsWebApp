@model LogisticsWebApp.Models.Lorry

@{
    ViewData["Title"] = "Delete Lorry";
}

<div class="container mt-5">
    <h1 class="display-4 text-center mb-5 fw-bold text-dark animate__animated animate__fadeInDown">
        <i class="bi bi-exclamation-triangle-fill me-3 text-warning"></i>Confirm Lorry Deletion
    </h1>

    <div class="card shadow-lg border-danger rounded-4 mx-auto animate__animated animate__fadeInUp" style="max-width: 650px; border-width: 3px;">
        <div class="card-header bg-danger text-white py-3 d-flex align-items-center">
            <h4 class="card-title mb-0 fw-bold flex-grow-1">
                <i class="bi bi-trash-fill me-2"></i>Delete Confirmation
            </h4>
        </div>
        <div class="card-body p-4 text-center">
            <h3 class="text-danger fw-bold mb-4">
                You are about to permanently delete the following lorry.
                <br>Are you absolutely sure you want to proceed?
            </h3>

            <div class="row row-cols-1 row-cols-md-2 g-3 text-start mb-4">
                <div class="col">
                    <div class="detail-item border rounded p-3 bg-light">
                        <strong class="d-block text-primary">License Plate:</strong>
                        <span class="text-dark fs-5">@Html.DisplayFor(model => model.LicensePlate)</span>
                    </div>
                </div>
                <div class="col">
                    <div class="detail-item border rounded p-3 bg-light">
                        <strong class="d-block text-primary">Model:</strong>
                        <span class="text-dark fs-5">@Html.DisplayFor(model => model.Model)</span>
                    </div>
                </div>
                <div class="col">
                    <div class="detail-item border rounded p-3 bg-light">
                        <strong class="d-block text-primary">Capacity:</strong>
                        <span class="text-dark fs-5">@Html.DisplayFor(model => model.CapacityKg) Kg</span>
                    </div>
                </div>
                <div class="col">
                    <div class="detail-item border rounded p-3 bg-light">
                        <strong class="d-block text-primary">Status:</strong>
                        @{
                            string statusClass = "bg-secondary"; // Default
                            switch (Model.Status)
                            {
                                case "Available":
                                    statusClass = "bg-success";
                                    break;
                                case "In Transit":
                                    statusClass = "bg-warning text-dark";
                                    break;
                                case "Maintenance":
                                    statusClass = "bg-danger";
                                    break;
                                default:
                                    statusClass = "bg-info text-dark";
                                    break;
                            }
                        }
                        <span class="badge @statusClass rounded-pill px-3 py-2 fs-6">
                            @Html.DisplayFor(model => model.Status)
                        </span>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="LorryID" />
                <div class="d-flex justify-content-center gap-3">
                    <button type="submit" value="Delete" class="btn btn-danger btn-lg rounded-pill px-5 py-3 shadow-sm animate__animated animate__pulse animate__infinite">
                        <i class="bi bi-trash-fill me-2"></i>Permanently Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-lg rounded-pill px-5 py-3 shadow-sm">
                        <i class="bi bi-x-circle-fill me-2"></i>Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Bootstrap Icons CSS (needed for icons) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet">
    <!-- Animate.css for subtle animations (optional, but adds flair) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
}

