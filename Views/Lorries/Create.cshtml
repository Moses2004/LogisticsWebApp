@model LogisticsWebApp.Models.Lorry

@{
    ViewData["Title"] = "Register New Lorry";
}

<div class="container mt-5">
    <div class="card shadow-lg p-4 rounded-3">
        <div class="card-header bg-primary text-white text-center rounded-top">
            <h1 class="mb-0">🚚 Register New Lorry</h1>
            <p class="lead mb-0">Fill in the details to add a new lorry to your fleet.</p>
        </div>
        <div class="card-body">
            <div class="row justify-content-center">
                <div class="col-md-8">
                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="LicensePlate" class="form-label fs-5">License Plate</label>
                            <input asp-for="LicensePlate" class="form-control form-control-lg" placeholder="e.g., ABC-1234" aria-describedby="licensePlateHelp" required />
                            <div id="licensePlateHelp" class="form-text">Enter the unique license plate number of the lorry.</div>
                            <span asp-validation-for="LicensePlate" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Model" class="form-label fs-5">Model</label>
                            <input asp-for="Model" class="form-control form-control-lg" placeholder="e.g., Volvo FH, Scania R-series" aria-describedby="modelHelp" required />
                            <div id="modelHelp" class="form-text">Specify the make and model of the lorry.</div>
                            <span asp-validation-for="Model" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="CapacityKg" class="form-label fs-5">Capacity (kg)</label>
                            <input asp-for="CapacityKg" class="form-control form-control-lg" type="number" placeholder="e.g., 20000" aria-describedby="capacityHelp" required />
                            <div id="capacityHelp" class="form-text">Enter the maximum carrying capacity in kilograms.</div>
                            <span asp-validation-for="CapacityKg" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Status" class="form-label fs-5">Status</label>
                            <select asp-for="Status" class="form-select form-select-lg" aria-describedby="statusHelp" required>
                                <option value="">-- Select Status --</option>
                                <option value="Available">Available</option>
                                <option value="In Transit">In Transit</option>
                                <option value="Maintenance">Under Maintenance</option>
                                <option value="Decommissioned">Decommissioned</option>
                            </select>
                            <div id="statusHelp" class="form-text">Current operational status of the lorry.</div>
                            <span asp-validation-for="Status" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-plus-circle-fill me-2"></i> Add Lorry
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg mt-2">
                                <i class="bi bi-arrow-left-circle-fill me-2"></i> Back to Lorry List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        // JavaScript for enabling Bootstrap's form validation styles
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}